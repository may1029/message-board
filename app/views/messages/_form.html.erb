<%= form_for(@message, :html => {class: 'form-horizontal'}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label for="message_name" class="col-sm-2 control-label">Name</label>
    <!-- <div class="col-sm-10"> -->
    <div class="col-xs-2">
      <%= f.text_field :name, :class=>"form-control" , :style=>".col-xs-2"%>
    </div>
  </div>
  <div class="form-group">
    <label for="message_age" class="col-sm-2 control-label">Age</label>
    <!-- <div class="col-sm-10"> -->
    <div class="col-xs-2">
      <%= f.text_field :age, :class=>"form-control" , :style=>".col-xs-2"%>
    </div>
  </div>
  <div class="form-group">
    <label for="message_body" class="col-sm-2 control-label">Comment</label>
    <!-- <div class="col-sm-10"> -->
    <div class="col-xs-5">
      <%= f.text_area :body, :class=>"form-control", :style=>"col-xs-5" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Enter</button>
    </div>
  </div>
<% end %>
